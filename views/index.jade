extends layout

block content
  .container
    
    .row.clearfix
      .span2
        ul#people.unstyled
      .span4.clearfix
        ul#msgs.clearfix
    
    
    .row#login-container
    
    
      #login.col-md-12.text-center
        
        span#login_logo
          img(src='images/logo@2x.png')
        span.title Welcome to KawaChat
        span.subtitle Quick way to exchange messages 
      
      
      #login-form.col-md-12
        
        form
          .form-group
            input#name.form-control(type='text', placeholder='Your username...')
          .form-group
            input#frq.form-control(type='text', placeholder='Frequency (MHz)...')
          .form-group
            input#join.form-control.btn.btn-primary(type='button', name='join', value='Join')
      
      
    #chat.span5.offset2.navbar.navbar-fixed-bottom
      form.clearfix
        .form-group
          row
            .col-xs-9.col-md-11
              input#msg.form-control(type='text', placeholder='Your message...')
            .col-xs-3.col-md-1
              input#send.btn.btn-success.form-control(type='button', name='send', value='Send')
